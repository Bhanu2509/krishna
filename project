$passw= $_POST['idg'];
  $asq= $_POST['idh'];
 $sql="INSERT INTO data (user_name,place,type_of_house,bid_range,contact,address)
	 VALUES ('$first_name','$pass','$password','$as','$passw','$asq')";
                

<!-----------------------VENDORS FETCHING DATA FROM DATABASE OF CUSTOMER DETAILS(recording.php)---------------!>

<?php
include_once 'database.php';
if(isset($_POST['saw']))
{	 
	   
	$da1=$_POST['idv'];
 $sql = "SELECT  customer,place,contact,address from  data  WHERE  place='$dal';
   if($retval = mysqli_query( $conn,$sql))
{ 
    while($row = mysqli_fetch_array($retval, MYSQLI_ASSOC)) {
      echo "CUSTOMER NAME:{$row['customer']}  <br> ".
  " PLACE : {$row['place']} <br> ".
"BID RANGE: {$row['bid_range']} <br> ".
 "CONTACT NUMBER  : {$row['cotact']} <br> ".
 "ADDRESS  : {$row['address']} <br> ".
   "--------------------------------<br>";
}
if(! $retval ) {
      die('Could not get data: ' . mysqli_error());
   }
 echo "Fetched data successfully\n";

  mysqli_close($conn);
} 
  } else {
		echo "Error: " . $sql . "
" . mysqli_error($conn);
	 }
 if(isset($_POST['sawing']))
{
session_start();

header("Location:vendor.php");
}
?>
